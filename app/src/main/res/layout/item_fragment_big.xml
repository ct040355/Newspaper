<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageViewBig"
        android:layout_width="360dp"
        android:layout_height="185dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:src="@drawable/hinh"/>
    <TextView
        android:id="@+id/tvTitleBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Siêu thị thực phẩm đồng giá bình ổn xuất hiện ở Sài Gòn"
        android:textColor="@color/black"
        android:textSize="22dp"/>
    <TextView
        android:id="@+id/tvDateBig"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:text="Sun, 18 Jul 2021 20:46"
        android:textColor="@color/black"
        android:textSize="15dp" />

</LinearLayout>